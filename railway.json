{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node server/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "scaling": {
    "minInstances": 1,
    "maxInstances": 3,
    "cpuThreshold": 70,
    "memoryThreshold": 80
  }
}
